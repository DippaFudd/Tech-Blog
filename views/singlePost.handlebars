<header class="header">
    <h1 class="site-title">Tech Blog</h1>
    <a href="/" class="btn btn-home">Home</a>
</header>

<main class="post-page">
    <section class="post-details card">
        <h2 class="post-title">{{post.title}}</h2>
        <p class="post-content">{{post.content}}</p>
        <p class="post-meta">Posted by <strong>{{post.user.username}}</strong> on {{post.createdAt}}</p>
    </section>

    <section class="comments-section card">
        <h3 class="section-title">Comments</h3>
        {{#if post.comments.length}}
            <ul class="comments-list">
                {{#each post.comments}}
                    <li class="comment-item">
                        <p class="comment-text">{{this.comment_text}}</p>
                        <p class="comment-meta">- by <strong>{{this.user.username}}</strong> on {{this.createdAt}}</p>
                        <button class="btn delete-comment" data-id="{{this.id}}">Delete</button>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p class="no-comments">No comments yet.</p>
        {{/if}}
    </section>

    <section class="add-comment card">
        <h3 class="section-title">Add a Comment</h3>
        <form class="comment-form" data-postid="{{post.id}}">
            <textarea id="comment-text" name="comment_text" class="input-textarea" placeholder="Write a comment..." required></textarea>
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </form>
    </section>
</main>

<script src="/js/comment.js"></script>

<style>
