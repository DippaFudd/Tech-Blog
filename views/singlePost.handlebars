        font-size: 1rem;
    }
    .btn-home:hover {
        background-color: #0056b3;
    }
    .post-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: linear-gradient(135deg, #000000, #007bff);
        padding: 2rem;
        border-radius: 10px;
    }
    .card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: white;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 800px;
    }
    .section-title {
        font-family: 'Arial', sans-serif;
