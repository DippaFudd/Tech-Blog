<header class="header">
    <h1 class="site-title">Tech Blog</h1>
</header>

<section class="dashboard">
    <div class="container">
        <h2 class="section-title">Your Posts</h2>

        <div class="posts-grid">
            {{#each posts}}
            <article class="post card">
                <h3 class="post-title"><a href="/dashboard/edit/{{id}}">{{title}}</a></h3>
                <p class="post-content">{{content}}</p>
                <div class="post-actions">
                    <a href="/post/{{id}}" class="btn btn-link">View Full Post & Comments</a>  
                    <button class="btn btn-danger delete-post" data-id="{{id}}">Delete</button>
                </div>
            </article>
            {{/each}}
        </div>

        <h2 class="section-title">Create a New Post</h2>
        <form class="new-post-form card">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="input-text" required>

            <label for="content">Content</label>
            <textarea id="content" name="content" class="input-textarea" required></textarea>

            <button type="submit" class="btn btn-primary">Add Post</button> 
        </form>
    </div>
</section>

<script src="/js/newPost.js"></script>
<script src="/js/dashboard.js"></script>

